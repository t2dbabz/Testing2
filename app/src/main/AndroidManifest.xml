<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.t2dbabz.tictactoe">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TwoPlayers"
            android:label="Two Players"
            android:screenOrientation="portrait"/>

        <activity android:name=".TwoPlayers5x5"
            android:label="Two Players 5x5"/>

        <activity android:name=".VsComputer"
            android:label="Vs Computer"
            android:screenOrientation="portrait" />
        <activity android:name=".VsComputer5x5"
            android:label="Vs Computer 5x5"/>
    </application>

</manifest>